<h1>Invitations</h1>

<p class="org-muted">
  Manage organization invitations and resend or revoke pending invites.
</p>

<div class="org-actions" style="margin-bottom: 14px;">
  <%= link_to "Invite Member", new_organization_invitation_path, class: "org-button primary" %>
</div>

<% if @invitations.blank? %>
  <p>No invitations yet.</p>
<% else %>
  <table class="org-table">
    <thead>
      <tr>
        <th>Email</th>
        <th>Role</th>
        <th>Status</th>
        <th>Invited by</th>
        <th>Expires</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @invitations.each do |invitation| %>
        <tr>
          <td><%= invitation.email %></td>
          <td><%= invitation.role.humanize %></td>
          <td><%= invitation.status.to_s.humanize %></td>
          <td><%= invitation.invited_by&.respond_to?(:email) ? invitation.invited_by.email : "-" %></td>
          <td><%= invitation.expires_at ? invitation.expires_at.to_s(:long) : "Never" %></td>
          <td class="org-actions">
            <% if invitation.pending? %>
              <%= button_to "Resend", resend_organization_invitation_path(invitation), method: :post, class: "org-button" %>
              <%= button_to "Revoke", organization_invitation_path(invitation), method: :delete, data: { turbo_confirm: "Revoke this invitation?" }, class: "org-button danger" %>
            <% else %>
              <span class="org-muted">No actions</span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
