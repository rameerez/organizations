<h1>Members</h1>

<p class="org-muted">
  Manage organization member roles and remove members.
</p>

<% if @memberships.blank? %>
  <p>No members found.</p>
<% else %>
  <table class="org-table">
    <thead>
      <tr>
        <th>User</th>
        <th>Email</th>
        <th>Role</th>
        <th>Joined</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @memberships.each do |membership| %>
        <tr>
          <td><%= membership.user.respond_to?(:name) && membership.user.name.present? ? membership.user.name : membership.user.email %></td>
          <td><%= membership.user.email %></td>
          <td><%= membership.role.humanize %></td>
          <td><%= membership.created_at.to_s(:long) %></td>
          <td class="org-actions">
            <% if membership.user_id != current_user.id %>
              <%= form_with(model: membership, url: membership_path(membership), method: :patch, local: true) do |form| %>
                <%= form.select :role, Organizations::Roles::HIERARCHY.map { |role| [role.to_s.humanize, role] }, {}, style: "min-width: 130px;" %>
                <%= form.submit "Update", class: "org-button" %>
              <% end %>
              <%= button_to "Remove", membership_path(membership), method: :delete, data: { turbo_confirm: "Remove this member?" }, class: "org-button danger" %>
            <% else %>
              <span class="org-muted">Current user</span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
