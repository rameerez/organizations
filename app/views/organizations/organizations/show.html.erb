<h1><%= @organization.name %></h1>

<p class="org-muted">
  Slug: <code><%= @organization.slug %></code>
</p>

<dl>
  <dt><strong>Members</strong></dt>
  <dd><%= @organization.member_count %></dd>

  <dt><strong>Owner</strong></dt>
  <dd><%= @organization.owner&.respond_to?(:email) ? @organization.owner.email : "Unknown" %></dd>
</dl>

<div class="org-actions" style="margin-top: 14px;">
  <%= link_to "Members", memberships_path, class: "org-button" %>
  <%= link_to "Invitations", organization_invitations_path, class: "org-button" %>
  <%= link_to "Edit", edit_organization_path(@organization), class: "org-button" %>
  <%= button_to "Delete", organization_path(@organization), method: :delete, data: { turbo_confirm: "Delete this organization?" }, class: "org-button danger" %>
</div>
