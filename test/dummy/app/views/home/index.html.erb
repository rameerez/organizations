<% if current_organization %>

  <%# Page header %>
  <div class="mb-8">
    <div class="flex items-start justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Dashboard</h1>
        <p class="mt-2 text-gray-500">This is a simulated SaaS dashboard demonstrating role-based access control. Try inviting new users and switching between them to see how permissions affect what's visible and actionable.</p>
      </div>
    </div>
  </div>

  <%# Educational banner %>
  <div class="mb-8 bg-slate-50 border border-slate-200 rounded-xl p-4">
    <div class="flex items-start gap-3">
      <%= heroicon "light-bulb", variant: :solid, options: { class: "h-5 w-5 text-slate-500 flex-shrink-0 mt-0.5" } %>
      <div class="text-sm text-slate-600">
        <p class="font-medium text-slate-700">How this demo works</p>
        <p class="mt-1">The buttons below map to actual <code class="bg-slate-200 px-1 rounded text-xs">organizations</code> gem permissions. Each role unlocks different actions: <strong>viewers</strong> can only view, <strong>members</strong> can create resources, <strong>admins</strong> can invite/remove members and manage settings, and <strong>owners</strong> have full control including billing and deletion. Try impersonating different users to see this in action.</p>
      </div>
    </div>
  </div>

  <%# Quick actions row - mapped to actual gem permissions %>
  <div class="mb-8">
    <h2 class="text-sm font-medium text-gray-500 uppercase tracking-wider mb-4">Demo Actions <span class="normal-case font-normal">(each tests a different permission)</span></h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">

      <%# Create Resource - requires :create_resources (member+) %>
      <% can_create = current_user.has_organization_permission_to?(:create_resources) %>
      <% if can_create %>
        <%= button_to main_app.demo_action_path(action_name: "create_resource", permission: "create_resources"),
          method: :post,
          data: { turbo: false },
          class: "bg-white rounded-xl border border-gray-200 shadow-sm p-5 text-left hover:border-slate-400 hover:shadow transition-all group cursor-pointer w-full" do %>
          <div class="h-10 w-10 rounded-lg bg-slate-100 flex items-center justify-center mb-3 group-hover:bg-slate-200 transition-colors">
            <%= heroicon "plus-circle", variant: :solid, options: { class: "h-5 w-5 text-slate-600" } %>
          </div>
          <p class="font-semibold text-gray-900">Create Resource</p>
          <p class="text-xs text-gray-500 mt-1">Requires <code class="bg-slate-100 px-1 rounded">:create_resources</code></p>
          <p class="text-xs text-slate-400 mt-1">member+ can do this</p>
        <% end %>
      <% else %>
        <div class="bg-gray-50 rounded-xl border-2 border-dashed border-gray-200 p-5 opacity-60">
          <div class="h-10 w-10 rounded-lg bg-gray-100 flex items-center justify-center mb-3">
            <%= heroicon "lock-closed", variant: :solid, options: { class: "h-5 w-5 text-gray-400" } %>
          </div>
          <p class="font-semibold text-gray-500">Create Resource</p>
          <p class="text-xs text-gray-400 mt-1">Requires <code class="bg-gray-100 px-1 rounded">:create_resources</code></p>
          <p class="text-xs text-gray-400 mt-1">You need member+ role</p>
        </div>
      <% end %>

      <%# Edit Resource - requires :edit_own_resources (member+) %>
      <% can_edit = current_user.has_organization_permission_to?(:edit_own_resources) %>
      <% if can_edit %>
        <%= button_to main_app.demo_action_path(action_name: "edit_resource", permission: "edit_own_resources"),
          method: :post,
          data: { turbo: false },
          class: "bg-white rounded-xl border border-gray-200 shadow-sm p-5 text-left hover:border-slate-400 hover:shadow transition-all group cursor-pointer w-full" do %>
          <div class="h-10 w-10 rounded-lg bg-slate-100 flex items-center justify-center mb-3 group-hover:bg-slate-200 transition-colors">
            <%= heroicon "pencil-square", variant: :solid, options: { class: "h-5 w-5 text-slate-600" } %>
          </div>
          <p class="font-semibold text-gray-900">Edit Resource</p>
          <p class="text-xs text-gray-500 mt-1">Requires <code class="bg-slate-100 px-1 rounded">:edit_own_resources</code></p>
          <p class="text-xs text-slate-400 mt-1">member+ can do this</p>
        <% end %>
      <% else %>
        <div class="bg-gray-50 rounded-xl border-2 border-dashed border-gray-200 p-5 opacity-60">
          <div class="h-10 w-10 rounded-lg bg-gray-100 flex items-center justify-center mb-3">
            <%= heroicon "lock-closed", variant: :solid, options: { class: "h-5 w-5 text-gray-400" } %>
          </div>
          <p class="font-semibold text-gray-500">Edit Resource</p>
          <p class="text-xs text-gray-400 mt-1">Requires <code class="bg-gray-100 px-1 rounded">:edit_own_resources</code></p>
          <p class="text-xs text-gray-400 mt-1">You need member+ role</p>
        </div>
      <% end %>

      <%# Manage Settings - requires :manage_settings (admin+) %>
      <% can_manage = current_user.has_organization_permission_to?(:manage_settings) %>
      <% if can_manage %>
        <%= button_to main_app.demo_action_path(action_name: "update_settings", permission: "manage_settings"),
          method: :post,
          data: { turbo: false },
          class: "bg-white rounded-xl border border-gray-200 shadow-sm p-5 text-left hover:border-slate-400 hover:shadow transition-all group cursor-pointer w-full" do %>
          <div class="h-10 w-10 rounded-lg bg-slate-100 flex items-center justify-center mb-3 group-hover:bg-slate-200 transition-colors">
            <%= heroicon "cog-6-tooth", variant: :solid, options: { class: "h-5 w-5 text-slate-600" } %>
          </div>
          <p class="font-semibold text-gray-900">Update Settings</p>
          <p class="text-xs text-gray-500 mt-1">Requires <code class="bg-slate-100 px-1 rounded">:manage_settings</code></p>
          <p class="text-xs text-slate-400 mt-1">admin+ can do this</p>
        <% end %>
      <% else %>
        <div class="bg-gray-50 rounded-xl border-2 border-dashed border-gray-200 p-5 opacity-60">
          <div class="h-10 w-10 rounded-lg bg-gray-100 flex items-center justify-center mb-3">
            <%= heroicon "lock-closed", variant: :solid, options: { class: "h-5 w-5 text-gray-400" } %>
          </div>
          <p class="font-semibold text-gray-500">Update Settings</p>
          <p class="text-xs text-gray-400 mt-1">Requires <code class="bg-gray-100 px-1 rounded">:manage_settings</code></p>
          <p class="text-xs text-gray-400 mt-1">You need admin+ role</p>
        </div>
      <% end %>

      <%# Manage Billing - requires :manage_billing (owner only) %>
      <% can_billing = current_user.has_organization_permission_to?(:manage_billing) %>
      <% if can_billing %>
        <%= button_to main_app.demo_action_path(action_name: "update_billing", permission: "manage_billing"),
          method: :post,
          data: { turbo: false },
          class: "bg-white rounded-xl border border-gray-200 shadow-sm p-5 text-left hover:border-slate-400 hover:shadow transition-all group cursor-pointer w-full" do %>
          <div class="h-10 w-10 rounded-lg bg-slate-100 flex items-center justify-center mb-3 group-hover:bg-slate-200 transition-colors">
            <%= heroicon "credit-card", variant: :solid, options: { class: "h-5 w-5 text-slate-600" } %>
          </div>
          <p class="font-semibold text-gray-900">Manage Billing</p>
          <p class="text-xs text-gray-500 mt-1">Requires <code class="bg-slate-100 px-1 rounded">:manage_billing</code></p>
          <p class="text-xs text-slate-400 mt-1">owner only</p>
        <% end %>
      <% else %>
        <div class="bg-gray-50 rounded-xl border-2 border-dashed border-gray-200 p-5 opacity-60">
          <div class="h-10 w-10 rounded-lg bg-gray-100 flex items-center justify-center mb-3">
            <%= heroicon "lock-closed", variant: :solid, options: { class: "h-5 w-5 text-gray-400" } %>
          </div>
          <p class="font-semibold text-gray-500">Manage Billing</p>
          <p class="text-xs text-gray-400 mt-1">Requires <code class="bg-gray-100 px-1 rounded">:manage_billing</code></p>
          <p class="text-xs text-gray-400 mt-1">You need owner role</p>
        </div>
      <% end %>

    </div>
  </div>

  <%# Main content - Two columns %>
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

    <%# Left column - Activity feed %>
    <div class="lg:col-span-2 space-y-6">

      <%# Recent Activity (visible to all - tests :view_organization) %>
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <h2 class="text-base font-semibold text-gray-900">Recent Activity</h2>
            <span class="inline-flex items-center rounded-full bg-slate-100 px-2.5 py-0.5 text-xs font-medium text-slate-700">
              All roles can view
            </span>
          </div>
        </div>

        <div class="p-6 space-y-3">
          <% 4.times do %>
            <div class="flex items-center gap-3 animate-pulse">
              <div class="h-8 w-8 rounded-lg bg-slate-100 flex-shrink-0"></div>
              <div class="flex-1 space-y-1.5">
                <div class="h-3 bg-slate-100 rounded w-3/4"></div>
                <div class="h-2 bg-slate-50 rounded w-1/2"></div>
              </div>
              <div class="h-2 bg-slate-50 rounded w-16"></div>
            </div>
          <% end %>
        </div>

        <div class="px-6 py-3 bg-slate-50 border-t border-gray-100">
          <p class="text-xs text-slate-500">
            Placeholder activity feed. Visible to all roles — even <code class="bg-slate-200 px-1 rounded">viewer</code> can see this.
          </p>
        </div>
      </div>

      <%# Admin-only: Metrics Panel (uses role check instead of permission) %>
      <% if current_user.is_organization_admin? %>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-200">
            <div class="flex items-center justify-between">
              <h2 class="text-base font-semibold text-gray-900">Confidential Metrics</h2>
              <span class="inline-flex items-center rounded-full bg-slate-100 px-2.5 py-0.5 text-xs font-medium text-slate-700">
                admin+ only
              </span>
            </div>
          </div>
          <div class="p-6">
            <div class="grid grid-cols-3 gap-4 animate-pulse">
              <% 3.times do %>
                <div class="text-center space-y-2">
                  <div class="h-8 bg-slate-100 rounded w-16 mx-auto"></div>
                  <div class="h-2 bg-slate-50 rounded w-20 mx-auto"></div>
                </div>
              <% end %>
            </div>
            <div class="mt-5 h-24 bg-slate-50 rounded-lg animate-pulse"></div>
          </div>
          <div class="px-6 py-3 bg-slate-50 border-t border-gray-100">
            <p class="text-xs text-slate-500">
              Placeholder metrics (doesn't load anything). Uses <code class="bg-slate-200 px-1 rounded">is_organization_admin?</code> to check role (admin or higher).
            </p>
          </div>
        </div>
      <% else %>
        <div class="bg-slate-50 rounded-xl border-2 border-dashed border-slate-200 p-6">
          <div class="text-center">
            <%= heroicon "chart-bar", variant: :outline, options: { class: "mx-auto h-10 w-10 text-slate-300" } %>
            <h3 class="mt-2 text-sm font-semibold text-gray-900">Confidential Metrics</h3>
            <p class="mt-1 text-xs text-gray-500">Requires <code class="bg-slate-200 px-1 rounded">admin</code> role or higher</p>
            <p class="text-xs text-gray-400">Impersonate an admin or owner to see this.</p>
          </div>
        </div>
      <% end %>

    </div>

    <%# Right column - Role info and team %>
    <div class="space-y-6">

      <%# Your Permissions (collapsible) %>
      <%
        permissions = [
          [:view_organization, "View organization", "all"],
          [:view_members, "View team members", "all"],
          [:create_resources, "Create resources", "member+"],
          [:edit_own_resources, "Edit own resources", "member+"],
          [:invite_members, "Invite members", "admin+"],
          [:remove_members, "Remove members", "admin+"],
          [:manage_settings, "Manage settings", "admin+"],
          [:manage_billing, "Manage billing", "owner"],
          [:delete_organization, "Delete organization", "owner"],
        ]
        granted_count = permissions.count { |perm, _, _| current_user.has_organization_permission_to?(perm) }
      %>
      <details class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden group">
        <summary class="px-5 py-4 flex items-center justify-between cursor-pointer hover:bg-gray-50 list-none">
          <div class="flex items-center gap-3">
            <div class="h-9 w-9 rounded-lg bg-slate-100 flex items-center justify-center">
              <%= heroicon "key", variant: :solid, options: { class: "h-5 w-5 text-slate-600" } %>
            </div>
            <div>
              <h2 class="text-sm font-semibold text-gray-900">Your Permissions</h2>
              <p class="text-xs text-gray-500"><%= granted_count %> of <%= permissions.size %> as <code class="bg-slate-100 px-1 rounded"><%= current_user.current_organization_role %></code></p>
            </div>
          </div>
          <%= heroicon "chevron-down", variant: :mini, options: { class: "h-5 w-5 text-gray-400 group-open:rotate-180 transition-transform" } %>
        </summary>
        <div class="px-4 pb-4 pt-2 space-y-1.5 border-t border-gray-100">
          <% permissions.each do |perm, label, req| %>
            <% has_perm = current_user.has_organization_permission_to?(perm) %>
            <div class="flex items-center justify-between py-1.5 px-2 rounded <%= has_perm ? 'bg-slate-50' : '' %>">
              <div class="flex items-center gap-2">
                <% if has_perm %>
                  <%= heroicon "check-circle", variant: :solid, options: { class: "h-4 w-4 text-slate-600" } %>
                <% else %>
                  <%= heroicon "x-circle", variant: :solid, options: { class: "h-4 w-4 text-gray-300" } %>
                <% end %>
                <span class="text-sm <%= has_perm ? 'text-gray-900' : 'text-gray-400' %>"><%= label %></span>
              </div>
              <span class="text-xs <%= has_perm ? 'text-slate-500' : 'text-gray-400' %>"><%= req %></span>
            </div>
          <% end %>
        </div>
      </details>

      <%# Team Members (compact) %>
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-6 py-5 border-b border-gray-200 flex items-center justify-between">
          <div>
            <h2 class="text-lg font-semibold text-gray-900">Team</h2>
            <p class="text-sm text-gray-500 mt-1"><%= current_organization.member_count %> members</p>
          </div>
          <%= link_to organizations.organization_path(current_organization), class: "text-sm font-medium text-slate-600 hover:text-slate-800" do %>
            Manage →
          <% end %>
        </div>
        <div class="p-4 space-y-3">
          <% current_organization.memberships.includes(:user).limit(5).each do |membership| %>
            <div class="flex items-center gap-3">
              <span class="inline-flex h-9 w-9 items-center justify-center rounded-full <%= membership.user_id == current_user.id ? 'bg-slate-600 text-white' : 'bg-slate-100 text-slate-600' %> font-medium text-sm">
                <%= membership.user.email.first.upcase %>
              </span>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900 truncate">
                  <%= membership.user.email.split('@').first %>
                  <% if membership.user_id == current_user.id %>
                    <span class="text-xs text-slate-500">(you)</span>
                  <% end %>
                </p>
                <span class="inline-flex items-center rounded px-1.5 py-0.5 text-xs font-medium bg-slate-100 text-slate-700">
                  <%= membership.role %>
                </span>
              </div>
              <% if membership.user.id != current_user.id %>
                <%= button_to main_app.switch_user_path(email: membership.user.email),
                  method: :post,
                  data: { turbo: false },
                  class: "text-xs text-slate-400 hover:text-slate-600 cursor-pointer",
                  title: "Impersonate this user" do %>
                  <%= heroicon "arrow-path", variant: :mini, options: { class: "h-4 w-4" } %>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
        <div class="px-4 py-3 bg-slate-50 border-t border-gray-100">
          <p class="text-xs text-slate-600">
            Click the arrow to impersonate a user and see the UI from their role's perspective.
          </p>
        </div>
      </div>

    </div>
  </div>

<% else %>
  <%# Welcome screen - no organization yet %>
  <% pending_invitations = current_user.pending_organization_invitations %>

  <div class="flex min-h-[60vh] items-center justify-center px-4">
    <div class="w-full max-w-md">
      <% if pending_invitations.any? %>
        <%# User has pending invitations - show them prominently %>
        <div class="space-y-4">
          <% pending_invitations.includes(:organization, :invited_by).each_with_index do |invitation, index| %>
            <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
              <%# Header %>
              <div class="px-6 py-5 bg-slate-600">
                <div class="flex items-center gap-4">
                  <div class="h-14 w-14 rounded-xl bg-white/20 backdrop-blur flex items-center justify-center shadow-lg">
                    <span class="text-2xl font-bold text-white"><%= invitation.organization.name.first.upcase %></span>
                  </div>
                  <div>
                    <p class="text-slate-200 text-sm">You're invited to join</p>
                    <h2 class="text-xl font-bold text-white"><%= invitation.organization.name %></h2>
                  </div>
                </div>
              </div>

              <%# Details %>
              <div class="px-6 py-5">
                <div class="flex items-center justify-between mb-4">
                  <div class="flex items-center gap-2 text-sm text-gray-500">
                    <%= heroicon "user", variant: :mini, options: { class: "h-4 w-4" } %>
                    <span>From <span class="font-medium text-gray-700"><%= invitation.invited_by&.email&.split('@')&.first || 'a team member' %></span></span>
                  </div>
                  <span class="inline-flex items-center gap-1.5 rounded-full px-3 py-1 text-xs font-semibold bg-slate-100 text-slate-700">
                    <%= invitation.role.capitalize %>
                  </span>
                </div>

                <%= link_to organizations.invitation_path(invitation.token),
                  class: "w-full inline-flex items-center justify-center gap-2 rounded-xl bg-slate-600 px-5 py-3 text-base font-semibold text-white shadow-md hover:bg-slate-500 hover:shadow-lg transition-all" do %>
                  <%= heroicon "check-circle", variant: :solid, options: { class: "h-5 w-5" } %>
                  View & Accept Invitation
                <% end %>
              </div>
            </div>
          <% end %>
        </div>

        <%# Separator %>
        <div class="flex items-center gap-4 my-8">
          <div class="flex-1 h-px bg-gray-200"></div>
          <span class="text-sm text-gray-400">or</span>
          <div class="flex-1 h-px bg-gray-200"></div>
        </div>

        <%# Create org option %>
        <div class="text-center">
          <%= link_to organizations.new_organization_path,
            class: "inline-flex items-center gap-2 rounded-xl bg-gray-100 px-5 py-3 text-sm font-medium text-gray-700 hover:bg-gray-200 transition-colors" do %>
            <%= heroicon "plus", variant: :solid, options: { class: "h-4 w-4" } %>
            Create your own organization instead
          <% end %>
        </div>

      <% else %>
        <%# No pending invitations %>
        <div class="mx-auto h-24 w-24 rounded-full bg-slate-100 flex items-center justify-center mb-6">
          <%= heroicon "building-office-2", variant: :solid, options: { class: "h-12 w-12 text-slate-600" } %>
        </div>
        <h1 class="text-2xl font-bold text-gray-900 mb-2 text-center">Welcome to the Organizations Gem Demo!</h1>
        <p class="text-gray-500 mb-4 text-center">You don't belong to any organization yet. Create one to explore the full feature set.</p>
        <p class="text-sm text-gray-400 mb-8 text-center">Organizations let you group users together with role-based permissions. Each user can belong to multiple organizations with different roles in each.</p>

        <div class="text-center">
          <%= link_to organizations.new_organization_path,
            class: "inline-flex items-center gap-2 rounded-lg bg-slate-600 px-6 py-3 text-lg font-semibold text-white shadow-sm hover:bg-slate-500 transition-colors" do %>
            <%= heroicon "plus", variant: :solid, options: { class: "h-5 w-5" } %>
            Create Your First Organization
          <% end %>
        </div>
      <% end %>

    </div>
  </div>

<% end %>
